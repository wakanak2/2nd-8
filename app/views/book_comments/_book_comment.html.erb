			    <table class="table" >
			      <% book.book_comments.each do |book_comment| %>
			    	<tr>
			    		<td><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %></td>
			    		<td><%= book_comment.user.name %></td>

			    		<td><%= book_comment.comment %></td>
			    		<% if book_comment.user == current_user%>
			    		<td><%= link_to "destroy",book_book_comment_path(book_comment.book, book_comment) ,method: :delete, remote: true ,class: "btn-sm btn-danger" %></td>
			    		<% end %>
			    	</tr>
			      <% end %>
			    </table>
			    <%= form_with model: [book, newcomment ] do |f| %>
			     <%= f.text_area :comment  %>
			     <%= f.submit "送信" %>
			    <% end %>
